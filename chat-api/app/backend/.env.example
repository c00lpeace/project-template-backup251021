# ==========================================
# Application Configuration
# ==========================================
APP_VERSION=1.0.0
APP_LOCALE=en
APP_LOG_LEVEL=info
APP_DEBUG=false
APP_ROOT_PATH=

# ==========================================
# Server Configuration
# ==========================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_DEBUG=false
SERVER_RELOAD=false
SERVER_LOG_LEVEL=info

# ==========================================
# CORS Configuration
# ==========================================
CORS_ORIGINS=http://localhost:8000,file://

# ==========================================
# Logging Configuration
# ==========================================
LOG_TO_FILE=false
LOG_DIR=./logs
LOG_FILE=app.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30
LOG_INCLUDE_EXC_INFO=true

# ==========================================
# Database Configuration
# ==========================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=chat_db
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password

# ==========================================
# LLM Provider Configuration
# ==========================================
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7
OPENAI_BASE_URL=

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT_NAME=
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_MAX_TOKENS=1000
AZURE_OPENAI_TEMPERATURE=0.7

# External API Configuration
EXTERNAL_API_URL=
EXTERNAL_API_AUTHORIZATION=
EXTERNAL_API_MAX_TOKENS=1000
EXTERNAL_API_TEMPERATURE=0.7

# ==========================================
# Cache Configuration
# ==========================================
CACHE_ENABLED=true
CACHE_TTL_CHAT_MESSAGES=1800
CACHE_TTL_USER_CHATS=600

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ==========================================
# File Upload Configuration
# ==========================================
UPLOAD_BASE_PATH=./uploads
UPLOAD_MAX_SIZE=52428800
UPLOAD_ALLOWED_TYPES=pdf,txt,doc,docx,jpg,jpeg,png,gif,xls,xlsx,zip

# ==========================================
# Program Upload Configuration
# ==========================================
# 프로그램 레더 ZIP 파일 최대 크기 (100MB)
PGM_LADDER_ZIP_MAX_SIZE=104857600

# 프로그램 템플릿 파일 최대 크기 (10MB)
PGM_TEMPLATE_MAX_SIZE=10485760

# 프로그램 레더 CSV 파일 최대 크기 (5MB)
PGM_LADDER_CSV_MAX_SIZE=5242880

# 프로그램 문서 타입
PGM_LADDER_CSV_DOCTYPE=PGM_LADDER_CSV
PGM_TEMPLATE_DOCTYPE=PGM_TEMPLATE_FILE
PGM_LADDER_ZIP_DOCTYPE=PGM_LADDER_ZIP

# 프로그램 디렉토리 구조
PGM_LADDER_DIR_NAME=ladder_files
PGM_TEMPLATE_DIR_NAME=template
PGM_ZIP_DIR_NAME=zip

# 템플릿 필수 컬럼 (쉼표로 구분)
PGM_TEMPLATE_REQUIRED_COLUMNS=Logic ID,Folder ID,Logic Name

# 원본 ZIP 파일 보관 여부
PGM_KEEP_ORIGINAL_ZIP=true

# ZIP 압축 해제 타임아웃 (초)
PGM_ZIP_EXTRACT_TIMEOUT=300
